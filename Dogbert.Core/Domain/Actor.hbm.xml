<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    assembly="Dogbert.Core" namespace="Dogbert.Core.Domain">
  <class
    name="Actor"
    table="Actors" >
    <id name="Id" column="ID" unsaved-value="0">
      <generator class="identity" />
    </id>

    <property name="Name" column="Name" />
    <property name="IsActive" column="IsActive" />

    <bag name="UseCases" table="UseCaseXActor">
      <key column="ActorID" />
      <many-to-many column="UseCaseID" 
                    class="Dogbert.Core.Domain.UseCase, Dogbert.Core" />
    </bag>


  </class>
</hibernate-mapping>
