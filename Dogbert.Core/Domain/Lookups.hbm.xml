<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">

	<class name="Dogbert.Core.Domain.Status, Dogbert.Core" table="Status" >
    <id name="Id" column="id" unsaved-value="0">
			<generator class="identity" />
		</id>

		<property name="Name" column="Name" />
		<property name="IsActive" column="IsActive" />
		<property name="IsComplete" column="IsComplete" />
	</class>

	<class name="Dogbert.Core.Domain.PersonType, Dogbert.Core" table="PeopleType" >
    <id name="Id" column="id" unsaved-value="0">
			<generator class="identity" />
		</id>

		<property name="Name" column="Name" />
		<property name="IsActive" column="IsActive" />
	</class>

	<class name="Dogbert.Core.Domain.PriorityType, Dogbert.Core" table="PriorityTypes" >
    <id name="Id" column="id" unsaved-value="0">
			<generator class="identity" />
		</id>

		<property name="Name" column="Name" />
		<property name="IsActive" column="IsActive" />
	</class>

	<class name="Dogbert.Core.Domain.Actor, Dogbert.Core" table="Actors" >
    <id name="Id" column="id" unsaved-value="0">
			<generator class="identity" />
		</id>

    <bag name="UseCases" table="UseCaseXActor">
      <key column="ActorID" />
      <many-to-many column="UseCaseID" class="Dogbert.Core.Domain.UseCase, Dogbert.Core" />
    </bag>


    <property name="Name" column="Name" />
		<property name="IsActive" column="IsActive" />
	</class>



  <class name="Dogbert.Core.Domain.FileType, Dogbert.Core" table="FileTypes" >
    <id name="Id" column="id" unsaved-value="0">
			<generator class="identity" />
		</id>

    
		<property name="Name" column="Name" />
		<property name="IsActive" column="IsActive" />

	</class>
	
</hibernate-mapping>