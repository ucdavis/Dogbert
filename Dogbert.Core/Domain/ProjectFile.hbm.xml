<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">

	<class name="Dogbert.Core.Domain.ProjectFile, Dogbert.Core" table="ProjectFiles" >
		<id name="Id" column="id" unsaved-value="0">
			<generator class="identity" />
		</id>

		<property name="FileName" column="FileName" />    
		<many-to-one name="Type" class="Dogbert.Core.Domain.FileType, Dogbert.Core" column="FileTypeId" cascade="none" />
    <many-to-one name="TextType" class="Dogbert.Core.Domain.TextType, Dogbert.Core" column="TextTypeID" cascade="none" />
    <many-to-one name="Project" class="Dogbert.Core.Domain.Project, Dogbert.Core" column="ProjectId" cascade="none" />
		<property name="DateAdded" column="DateAdded" />
    <property name="DateChanged" column="DateChanged" />
    <property name="FileContentType" column="FileContentType" />
    <property name="FileContents" column="FileContents" />
    <property name="Caption" column="Caption" />
	</class>
</hibernate-mapping>