@model Dogbert2.Core.Domain.Requirement

@{
    ViewBag.Title = "Delete";
    ViewBag.SubTitle = "Are you sure you want to delete this?";
}



@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()

<fieldset class="display-form">
	<legend>Requirement</legend>
	<ul>
		<li>
			<div class="display-label">Description</div>
			<div class="display-details">@Model.Description</div>
		</li>
		<li>
			<div class="display-label">TechnicalDifficulty</div>
			<div class="display-details">@Model.TechnicalDifficulty</div>
		</li>
		<li>
			<div class="display-label">IsComplete</div>
			<div class="display-details">@Model.IsComplete</div>
		</li>
		<li>
			<div class="display-label">DateAdded</div>
			<div class="display-details">@String.Format("{0:g}", Model.DateAdded)</div>
		</li>
		<li>
			<div class="display-label">LastModified</div>
			<div class="display-details">@String.Format("{0:g}", Model.LastModified)</div>
		</li>
		
		<li>
			@* For the clear and submit buttons an empty label is required. Example: <label>&nbsp;</label> *@
			<div class="display-label">&nbsp;</div>
			<div class="display-details">
			<input class="button" type="submit" value="Delete" /> | @Html.ActionLink("Cancel", "Index")
			</div>
		</li>
	</ul>
</fieldset>
}


