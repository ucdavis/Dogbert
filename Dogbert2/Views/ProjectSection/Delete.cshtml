@model Dogbert2.Core.Domain.ProjectText

@{
    ViewBag.Title = "Delete Project Text";
    ViewBag.SubTitle = "Are you sure you want to delete this?";
}

@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()

    <fieldset class="display-form">
	    <legend>ProjectText</legend>
	    <ul>

		    <li>
			    <div class="display-label">Text</div>
			    <div class="display-details"><fieldset>@Model.Text</fieldset></div>
		    </li>

		    <li>
			    <div class="display-label">DateCreated</div>
			    <div class="display-details">@String.Format("{0:g}", Model.DateCreated)</div>
		    </li>

		    <li>
			    <div class="display-label">LastUpdate</div>
			    <div class="display-details">@String.Format("{0:g}", Model.LastUpdate)</div>
		    </li>
		
		    <li>
			    @* For the clear and submit buttons an empty label is required. Example: <label>&nbsp;</label> *@
			    <div class="display-label">&nbsp;</div>
			    <div class="display-details">
			    <input class="button" type="submit" value="Delete" /> | @Html.ActionLink("Cancel", "Index")
			    </div>
		    </li>
	    </ul>
    </fieldset>
}




