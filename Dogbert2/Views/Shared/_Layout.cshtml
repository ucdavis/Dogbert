<!DOCTYPE html>
<html>
<head>
    <title>@string.Format("Dogbert 2 | {0}", ViewBag.Title)</title>

    <meta name="description" content="" />
    <meta name="author" content="" />

    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />

    <link type="text/css" rel="Stylesheet" href="@Url.Css("jquery-ui-1.8.14.caes.css")" />
    <link type="text/css" rel="Stylesheet" href="@Url.Css("Site.css")" />

    <script type="text/javascript" src="@Url.Script("jquery-1.6.2.min.js")"></script>
    <script type="text/javascript" src="@Url.Script("jquery-ui.min.js")"></script>
    <script type="text/javascript" src="@Url.Script("jquery.validate.min.js")"></script>
    <script type="text/javascript" src="@Url.Script("jquery.validate.unobtrusive.min.js")"></script>
    <script type="text/javascript" src="@Url.Script("modernizr-2.0.6.js")"></script>

    @RenderSection("AdditionalScripts", false)

</head>

<body>
    	<div class="wrapper">
	
        @*@Html.Partial("_ServiceMessages")*@
	
		<header id="branding">
			
			<!-- Application's Name -->
			<span class="header">
				<h1>
                    <img src="@Url.Image("dogbert_logo.png")" alt="Dogbert Logo" />
                    Dogbert
                </h1>
					
				<!-- Sub Branding Images -->
				<div class="col1">
					<span><a href="http://www.ucdavis.edu"><img src="@Url.Image("logo-ucdavis.png")" alt="UC Davis" /></a></span>
					<span><a href="http://caes.ucdavis.edu"><img src="@Url.Image("logo-caes-long-cap.png")" alt="College of Agricultural &amp; Environmental Sciences" /></a></span>
				</div>
					
				<!-- Navigation Menu -->
				<nav class="col2">
					
                    @Html.Partial("_Navigation")
					
				</nav>
			</span>
				
		</header>
			
		<div id="personalbar">
			<!-- Example Welcome user message -->
			<div class="col1">
				<span id="welcome_user">
                    @if (User.Identity.IsAuthenticated)
                    { 
                        <text>Welcome back @User.Identity.Name</text>
                    }
                </span>
			</div>
			<!-- Example logout button -->
			<div class="col2">
				@Html.Partial("_Login")
			</div>
			
		</div>
			
		<div class="main">
			
			<header>
				
                @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage)) { 
                <div id="error-message">
                    @ViewBag.ErrorMessage
                </div>
                }
					
                @if (!string.IsNullOrWhiteSpace(TempData["Message"] as string)) { 
                <div id="status-message">
                    @TempData["Message"]
                </div>
                }
				
				<div class="col1">
					<h2>@ViewBag.Title</h2>
					<h3>@ViewBag.SubTitle</h3>
				</div>
					
				<nav class="col2">
                    @*Sub Page Navigation*@
					@RenderSection("SubNav", false)
				</nav>
				
			</header>
			
			<div id="body">
				@RenderBody()					
			</div>
				
		</div>
			
		<footer id="footer">
			<div id="footertext">
				<nav class="col1">
					
					@Html.Partial("_Navigation")
					
				</nav>
				<small class="col2">
					
					<ul>
						<li>Version # @ViewBag.Version</li>
						<li>Developed By The College Of Agricultural And Environmental Science Dean's Office</li>
						<li>Copyright The Regents of the University of California, Davis campus, 2005-11.<br />All Rights Reserved. </li>
					</ul>
					
				</small>
			</div>
		</footer>
	
	</div>
	
    <script src="@Url.Script("Common/jquery.placeholder.min.js")" type="text/javascript"></script>
    <script src="@Url.Script("Common/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Script("InputTypeTest.js")" type="text/javascript"></script>
    <script src="@Url.Script("HtmlFallback.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            $('input, textarea').placeholder();
            $('.dt-table').dataTable({ "bJQueryUI": true });

            // sets the way jquery deals with array parameters
            jQuery.ajaxSettings.traditional = true;
        });
    </script>

    @*----------- Google Analytics ---------- *@
    <script>
        var _gaq = [["_setAccount", "UA-XXXXX-X"], ["_trackPageview"]]; // Change UA-XXXXX-X to be your site's ID 
        (function (d, t) {
            var g = d.createElement(t), s = d.getElementsByTagName(t)[0]; g.async = 1;
            g.src = ("https:" == location.protocol ? "//ssl" : "//www") + ".google-analytics.com/ga.js";
            s.parentNode.insertBefore(g, s)
        } (document, "script"));
    </script>

</body>
</html>