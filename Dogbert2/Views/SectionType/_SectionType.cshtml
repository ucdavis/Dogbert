@model SectionTypeViewModel

@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)
    <fieldset>
	    <legend>SectionTypeViewModel</legend>
	    <p>All required fields are in <strong>bold</strong> and have a red <span class="required">*</span> next to the field label.</p>
	    <ul>

            <li><div class="editor-label required">Id<span>*</span></div>
                <div class="editor-field">
                    @Html.EditorFor(a=>a.SectionType.Id)
                    @Html.ValidationMessageFor(a=> a.SectionType.Id)
                </div>
            </li>

            <li><div class="editor-label required">@Html.LabelFor(a=>a.SectionType.Name)<span>*</span></div>
                <div class="editor-field">
                    @Html.EditorFor(a => a.SectionType.Name)
                    @Html.ValidationMessageFor(a => a.SectionType.Name)
                </div>
            </li>

            <li><div class="editor-label">@Html.LabelFor(a=>a.SectionType.Description)</div>
                <div class="editor-field">
                    @Html.EditorFor(a => a.SectionType.Description)
                    @Html.ValidationMessageFor(a => a.SectionType.Description)
                </div>
            </li>

             <li><div class="editor-label">@Html.LabelFor(a=>a.SectionType.IsActive)</div>
                <div class="editor-field">
                    @Html.EditorFor(a => a.SectionType.IsActive)
                    @Html.ValidationMessageFor(a => a.SectionType.IsActive)
                </div>
            </li>


		    <li>
			    @* For the clear and submit buttons an empty label is required. Example: <label>&nbsp;</label> *@
			    <div class="editor-label">&nbsp;</div>
			    <div class="editor-field">
			    <input class="button" type="submit" value="Create" /> | @Html.ActionLink("Cancel", "Index")
			    </div>
		    </li>
	    </ul>
    </fieldset>
}




