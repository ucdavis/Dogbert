@model Dogbert2.Core.Domain.Task

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this?</h3>

@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()

<fieldset class="display-form">
	<legend>Task</legend>
	<ul>
        <li><div class="display-label">Task Id</div>
            <div class="display-details">@Model.TaskId</div>
        </li>
        <li><div class="display-label">Requirement</div>
            <div class="display-details">@string.Format("{0} - {1}", Model.Requirement.RequirementId, Model.Requirement.Description)</div>
        </li>
        <li><div class="display-label">Worker</div>
            <div class="display-details">@Model.Worker.FullName</div>
        </li>
		<li>
			<div class="display-label">Description</div>
			<div class="display-details">@Model.Description</div>
		</li>
		<li>
			<div class="display-label">Comments</div>
			<div class="display-details">@Model.Comments</div>
		</li>
		<li>
			<div class="display-label">Complete</div>
			<div class="display-details">@Model.Complete</div>
		</li>
		<li>
			<div class="display-label">DateCreated</div>
			<div class="display-details">@String.Format("{0:g}", Model.DateCreated)</div>
		</li>
		<li>
			<div class="display-label">LastUpdate</div>
			<div class="display-details">@String.Format("{0:g}", Model.LastUpdate)</div>
		</li>
		
		<li>
			@* For the clear and submit buttons an empty label is required. Example: <label>&nbsp;</label> *@
			<div class="display-label">&nbsp;</div>
			<div class="display-details">
			<input class="button" type="submit" value="Delete" /> | @Html.ActionLink("Cancel", "Index")
			</div>
		</li>
	</ul>
</fieldset>
}


