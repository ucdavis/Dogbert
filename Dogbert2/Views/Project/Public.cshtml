@model IEnumerable<Dogbert2.Core.Domain.Project>

@{
	ViewBag.Title = "Public Projects";
}

@section SubNav
{
	<ul class='navigation'>
	</ul>
}


<table class='dt-table nolasticon'>
	<thead>
		<tr>
			<th></th>
			<th>
				Name
			</th>
            <th>
                Unit
            </th>
			<th>
                Workgroups
            </th>
            <th>
                Departments
            </th>
            <th>
				Last Update
			</th>

		</tr>
	</thead>
	<tbody>
@{ var odd = false; }
@foreach (var item in Model) {
		<tr class="@(odd ? "odd": "even")">
			<td>
				<a href='@Url.Action("Details", new { id = item.Id, publicList = true})'>
					<img src='@Url.Image("details.png")' />
				</a>
			</td>
			<td>
				@item.Name
			</td>
            <td>
                @item.Unit
            </td>
            <td>
				@item.WorkgroupNames
			</td>
			<td>
				@item.WorkgroupDepts
			</td>
			<td>
				@String.Format("{0:g}", item.LastUpdate)
			</td>		
		</tr>
		odd = !odd;
}
	</tbody>
</table>