@model WorkgroupWorker

@{
    ViewBag.Title = "Remove Worker";
    ViewBag.SubTitle = "Are you sure you want to delete this?";
}

@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()

    <fieldset class="display-form">
	    <legend>WorkgroupWorker</legend>

        <p>This will remove user access for user to all projects in workgroup.</p>

	    <ul>

            <li>
			    <div class="display-label">Workgroup</div>
			    <div class="display-details">@Model.Workgroup.Name</div>
		    </li>

            <li>
			    <div class="display-label">Worker</div>
			    <div class="display-details">@Model.Worker.FullName</div>
		    </li>

		    <li>
			    <div class="display-label">Limited</div>
			    <div class="display-details">@Model.Limited</div>
		    </li>
		
		    <li>
			    @* For the clear and submit buttons an empty label is required. Example: <label>&nbsp;</label> *@
			    <div class="display-label">&nbsp;</div>
			    <div class="display-details">
			    <input class="button" type="submit" value="Delete" /> | @Html.ActionLink("Cancel", "Details", new { id=Model.Workgroup.Id })
			    </div>
		    </li>
	    </ul>
    </fieldset>
}




