@model IEnumerable<Dogbert2.Core.Domain.File>

@{
	ViewBag.Title = "Project Files";
    ViewBag.NavigationKey = "Project";
}

@section SubNav
{
	<ul class='navigation'>
		<li>@Html.ActionLink("Create New", "Create", new { id=ViewBag.ProjectId })</li>
        <li>@Html.ActionLink("Back to Project", "Details", "Project", new {id=ViewBag.ProjectId}, new {})</li>
	</ul>
}


<table class='dt-table'>
	<thead>
		<tr>
			<th></th>

            <th>
				Title
			</th>

			<th>
				Caption
			</th>

			<th>
				FileName
			</th>

			<th>
				IsImage
			</th>

			<th>
				Append
			</th>

			<th>
				LastUpdate
			</th>


			<th></th>

		</tr>
	</thead>
	<tbody>
@{ var odd = false; }
@foreach (var item in Model) {
		<tr class="@(odd ? "odd": "even")">

			<td>
				<a href='@Url.Action("Download", new {id=item.Id})'>
					<img src='@Url.Image("details.png")' />
				</a>
				<a href='@Url.Action("Edit", new {id=item.Id})'>
					<img src='@Url.Image("edit.png")' />
				</a>
			</td>

            <td>
				@item.Title
			</td>

			<td>
				@item.Caption
			</td>

			<td>
				@item.FileName
			</td>
            
			<td>
				@item.IsImage
			</td>

			<td>
				@item.Append
			</td>

			<td>
				@String.Format("{0:g}", item.LastUpdate)
			</td>
		
		    <td>
			    <a href='@Url.Action("Delete", new { id = item.Id })'>
				    <img src='@Url.Image("delete.png")' />
			    </a>
		    </td>

		</tr>
		odd = !odd;
}
	</tbody>
</table>