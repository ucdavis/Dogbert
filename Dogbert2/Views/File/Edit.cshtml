@model Dogbert2.Core.Domain.File


@{
    ViewBag.Title = "Edit Project File";
}

@using (Html.BeginForm("Edit", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)
    <fieldset>
        <ul>
            <li><div class="editor-label">Current File Name:</div>
                <div class="editor-field">
                    @Model.FileName
                    @Html.ActionLink("[Download]", "Download", new { id=Model.Id })
                </div>
            </li>
            <li><div class='editor-label'>Title</div>
                <div class='editor-field'>@Html.TextBox("file.Title", Model.Title)</div>
            </li>
            <li><div class='editor-label'>Caption</div>
                <div class='editor-field'>@Html.TextArea("file.Caption", Model.Caption)</div>
            </li>
            <li><div class='editor-label required'>File<span>*</span></div>
                <div class='editor-field'><input type="file" id='file_file' name='file.File' /></div>
            </li>
            <li><div class='editor-label'>Append</div>
                <div class='editor-field'>@Html.CheckBox("file.Append", Model.Append)
                    <em>Append a pdf to the SRS?</em>
                </div>
            </li>
            <li>
			    <div class="editor-label">&nbsp;</div>
			    <div class="editor-field">
			    <input class="button" type="submit" value="Save" /> | @Html.ActionLink("Cancel", "Index", new { id = Model.Project.Id })
			    </div>
		    </li>
        </ul>  
    </fieldset>
}